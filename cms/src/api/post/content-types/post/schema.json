{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": "Blog posts with MDX content support"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "description": "Short description for previews and SEO"
    },
    "content": {
      "type": "richtext",
      "description": "Main content of the blog post (supports MDX)"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "readingTime": {
      "type": "integer",
      "description": "Estimated reading time in minutes"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false,
      "description": "Mark post as featured"
    },
    "seoTitle": {
      "type": "string",
      "description": "Custom SEO title"
    },
    "seoDescription": {
      "type": "text",
      "description": "Custom SEO description"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "posts"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "posts"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "posts"
    }
  }
} 