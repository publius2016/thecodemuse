{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Static pages like About, Services, Contact"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext",
      "description": "Page content (supports MDX)"
    },
    "seoTitle": {
      "type": "string",
      "description": "Custom SEO title"
    },
    "seoDescription": {
      "type": "text",
      "description": "Custom SEO description"
    },
    "isHomePage": {
      "type": "boolean",
      "default": false,
      "description": "Mark as homepage"
    },
    "order": {
      "type": "integer",
      "description": "Page order for navigation"
    }
  }
} 